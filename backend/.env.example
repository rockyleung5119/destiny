# 服务器配置
PORT=3001
NODE_ENV=development

# 数据库配置
DB_PATH=./database/destiny.db

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 邮件服务配置

# QQ邮箱配置 (推荐)
EMAIL_SERVICE=qq
EMAIL_HOST=smtp.qq.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-qq-number@qq.com
EMAIL_PASS=your-16-digit-authorization-code

# Gmail配置
# EMAIL_SERVICE=gmail
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# 163邮箱配置
# EMAIL_SERVICE=163
# EMAIL_HOST=smtp.163.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@163.com
# EMAIL_PASS=your-authorization-code

# 应用配置
APP_NAME=Destiny Fortune Telling
APP_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# 验证码配置
VERIFICATION_CODE_EXPIRES=300000
VERIFICATION_CODE_LENGTH=6
MAX_VERIFICATION_ATTEMPTS=3

# 速率限制配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
