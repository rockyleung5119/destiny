{
  "name": "destiny-backend-workers",
  "version": "1.0.0",
  "description": "Destiny Fortune Telling Backend for Cloudflare Workers",
  "main": "worker.js",
  "type": "module",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "build": "echo 'No build step needed for Workers'",
    "db:create": "wrangler d1 create destiny-db",
    "db:init": "wrangler d1 execute destiny-db --file=./d1-schema.sql",
    "db:migrate": "wrangler d1 execute destiny-db --file=./d1-schema.sql"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
